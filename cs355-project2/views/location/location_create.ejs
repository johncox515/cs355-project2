<% include ../partials/header.ejs %>

<% if(typeof message !== 'undefined') { %>
<div class="alert <%= alert_class %>" role="alert"><%= message %></div>
<% } %>


<form action="./save" class="col-md-4">
    <div class="form-group">
        <label for="Address">Address:</label>
        <input type="text" name="Address" id="Address" value="" class="form-control" />
    </div>
    <label for="storename">Store Name:</label>
    <select id="storename" name="storename">
        <option></option>
        <% for(var i=0; Store.length > i; i++) { %>
        <option value="<%= Store[i].id %>"><%= Store[i].name %></option>
        <% } %>
    </select>

    <input type="hidden" name="location_id" id="location_id" value="<%= Store[0].id %>" />

    <br />
    <input type="submit" />
    <p>Can't find the Store?</p><a href="/store/create">Create a Store</a>
</form>

<% include ../partials/footer.ejs %>