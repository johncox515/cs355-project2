<% include ../partials/header.ejs %>

<% if(typeof message !== 'undefined') { %>
<div class="alert <%= alert_class %>" role="alert"><%= message %></div>
<% } %>


<form action="./update" class="col-md-4">
    <div class="form-group">
        <label for="Address">Address:</label>
        <input type="text" name="Address" id="Address" value="<%= Location[0].Address %>" class="form-control" />
    </div>
    <label for="storename">Store Name:</label>
    <select id="storename" name="storename">
        <option></option>
        <% Store.forEach(function(entry) { %>
        <% var name = entry.name %>
        <% var selected = "";
            if(entry.name == Store[0].name) {
                selected = "selected";
            }
        %>
        <option value="<%= entry.id %>" <%=selected %>><%= name %></option>
        <% }); %>
    </select>

    <input type="hidden" name="location_id" id="location_id" value="<%= Store[0].id %>" />

    <br />
    <input type="submit" />
</form>

<% include ../partials/footer.ejs %>