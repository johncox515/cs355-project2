<div>
    <% if(rs.length > 0) { %>
    <table border="1">
        <!-- &nbsp is HTML syntax for a space it stands for non break space -->
        <tr><th>Name</th><th>Beer Name</th><th>Beer Type</th><th>ABV</th></tr>
        <% for (var i=0; rs.length > i; i++) { %>
        <tr>
            <td><%= rs[i].BreweryName %></td> <td><%= rs[i].BeerName %> </td> <td> <%= rs[i].BeerType %> </td> <td><%= rs[i].ABV %></td>
        </tr>
        <% } %>
    </table>
    <% } else { %>
    No BeerABVs are entered into the brewery database table.
    <% } %>
</div>

